#SIESTA INPUT last modified by ARO 02/09/2005
 
SystemName Magnesium Oxide Crystal
SystemLabel            mgo
NumberOfAtoms           2
NumberOfSpecies         2
 
%block Chemical_Species_Label
  1   12   Mg
  2    8    O
%endblock Chemical_Species_Label

MD.Use-struct-file T
 
%include mydefaults.fdf
 
# DFT, Grid, SCF, relaxation
XC.functional           LDA
XC.authors              PZ
DM.Tolerance            1.d-3
ElectronicTemperature   100 K
MD.MaxForceTol          4.0d-2 eV/Ang
MaxSCFIterations        30
MD.MaxCGDispl           0.1 Bohr
PAO.EnergyShift         0.01 Ry

Harris-Functional   T
#Specific tags:
%block    PAO.BasisSizes
Mg      SZP
O       DZ
%endblock PAO.BasisSizes
MeshCutoff              75 Ry
%block GridCellSampling
0.5    0.5    0.0
0.5    0.0    0.5
0.0    0.5    0.5
%endblock GridCellSampling

MD.VariableCell         F
MD.PreconditionVariableCell  8.0 Ang
MD.NumCGsteps           35
MD.TargetPressure       10.0 GPa
MD.MaxStressTol          0.1 GPa
