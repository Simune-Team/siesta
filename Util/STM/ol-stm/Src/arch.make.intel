SIESTA_ARCH=intel
#
FC=ifort
FC_ASIS=$(FC)
#
FFLAGS=-O0 -w -ftrapuv -CB
FFLAGS_DEBUG= 
LDFLAGS= -static-libcxa
RANLIB=echo
#
#
INCFLAGS= -I$(HOME)/lib/fftw-ifort/include
FFTWLIBS = -L$(HOME)/lib/fftw-ifort/lib -lfftw3

SYS=bsd
DEFS= 
#
.F.o:
	$(FC) -c $(FFLAGS) $(INCFLAGS)  $(DEFS) $<
.f.o:
	$(FC) -c $(FFLAGS) $(INCFLAGS)   $<
.F90.o:
	$(FC) -c $(FFLAGS) $(INCFLAGS)  $(DEFS) $<
.f90.o:
	$(FC) -c $(FFLAGS) $(INCFLAGS)   $<
