# -----------------------------------------------------------------------------
# FDF for bulk silicon      
#
#
# J. Junquera
# -----------------------------------------------------------------------------

SystemName       Bulk diamond Si    # Descriptive name of the system
SystemLabel            Si           # Short name for naming files

# Output options

WriteCoorStep
WriteMullikenPop       1    

# Species and atoms

NumberOfSpecies        1       
NumberOfAtoms          2      
%block ChemicalSpeciesLabel
  1  14   Si
%endblock ChemicalSpeciesLabel

# Basis
PAO.BasisSize SZ

LatticeConstant       5.43 Ang  

%block LatticeVectors          
 0.00000   0.500000  0.500000
 0.50000   0.000000  0.500000 
 0.50000   0.500000  0.000000
%endblock LatticeVectors

# Atomic coordinates
AtomicCoordinatesFormat     Fractional    
%block AtomicCoordinatesAndAtomicSpecies
  0.0000000000    0.000000000000    0.000000000000  1 
  0.2500000000    0.250000000000    0.250000000000  1 
%endblock AtomicCoordinatesAndAtomicSpecies

KgridCutoff          10. Ang

#%block BandLines
#  1  0.00000   0.000000  0.000000  \Gamma
# 40  2.00000   0.000000  0.000000  H
# 28  1.00000   1.000000  0.000000  N
# 28  0.00000   0.000000  0.000000  \Gamma
# 34  1.00000   1.000000  1.000000  P
#%endblock BandLines

WriteWaveFunctions T
%block WaveFuncKPoints
0.0 0.0 0.0 
%endblock WaveFuncKPoints

xc.functional         LDA           # Exchange-correlation functional
xc.authors            PZ            # Exchange-correlation version

SpinPolarized         no            # Logical parameters are: yes or no

MeshCutoff           30  Ry         # Mesh cutoff. real space mesh 

# SCF options
MaxSCFIterations       40           # Maximum number of SCF iter
DM.MixingWeight       0.1           # New DM amount for next SCF cycle
DM.Tolerance          1.d-4         # Tolerance in maximum difference
                                    # between input and output DM
DM.UseSaveDM          true          # to use continuation files
DM.NumberPulay         3

SolutionMethod        diagon        # OrderN or Diagon
ElectronicTemperature  25 meV       # Temp. for Fermi smearing

# MD options

MD.TypeOfRun           cg           # Type of dynamics:
MD.NumCGsteps           0           # Number of CG steps for 
                                    #   coordinate optimization
MD.MaxCGDispl          0.1 Ang      # Maximum atomic displacement 
                                    #   in one CG step (Bohr)
MD.MaxForceTol         0.04 eV/Ang  # Tolerance in the maximum 
                                    #   atomic force (Ry/Bohr)


WriteCoorXmol          .true.
WriteDenchar           .true.

SaveRho
SaveDeltaRho



#  *************************************************************************
#                     Input variables for Denchar
#  (besides SystemLabel, NumberOfSpecies and ChemicalSpecies, defined above)
#  *************************************************************************

Denchar.TypeOfRun      3D

Denchar.PlotCharge          T
Denchar.PlotWaveFunctions   T

Denchar.CoorUnits       bohr           # Format for coordinate of the points
                                       # Bohr
                                       # Ang

Denchar.DensityUnits   Ele/bohr**3     # Units of Charge Density
                                       # Ele/bohr**3
                                       # Ele/Ang**3
                                       # Ele/UnitCell

Denchar.MinX            0.0  bohr      # Minimum coord of the window in X-dir
Denchar.MaxX          7.2557 bohr      # Maximum coord of the window in X-dir

Denchar.MinY            0.0  bohr      # Minimum coord of the window in Y-dir
Denchar.MaxY          7.2557 bohr      # Maximum coord of the window in Y-dir

Denchar.MinZ            0.0  bohr      # Minimum coord of the window in Y-dir
Denchar.MaxZ          7.2557 bohr      # Maximum coord of the window in Y-dir

Denchar.NumberPointsX    13            # Number of points in X-axis
Denchar.NumberPointsY    13            # Number of points in Y-axis
Denchar.NumberPointsZ    13            # Number of points in Y-axis

Denchar.PlaneGeneration  TwoLines      # Option to generate the plane
                                       # NormalVector
                                       # TwoLines
                                       # ThreePoints
                                       # ThreeAtomicIndices
 
%block Denchar.Comp2Vectors            # Components of Two Vectors in the plane
0.00000 0.50000 0.50000
0.50000 0.00000 0.50000
%endblock Denchar.Comp2Vectors
 
%block Denchar.PlaneOrigin             # Coordinates of the origin of the plane
0.000   0.000   0.000
%endblock Denchar.PlaneOrigin
 
%block Denchar.AtomsInPlane
 1
 2
 3
%endblock Denchar.AtomsInPlane
